@model List<DataBase.Models.User>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin</title>
    <link rel="stylesheet" href="~/css/admin.css" />
</head>
<body>
<div class="container">
    <h2>Admin panel</h2>

    <table class="table">
        <thead>
        <tr>
            <th>Login</th>
            <th>Email</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var user in Model)
        {
        <tr>
            <td>@user.Login</td>
            <td>@user.Email</td>
            <td>
                <form method="post" asp-controller="Admin" asp-action="DeleteUser" asp-route-id="@user.Id" class="inline-form" onsubmit="return confirm('Are you sure you want to delete the user?');">
                    <button type="submit" class="btn btn-danger">Удалить</button>
                </form>
                <form method="post" asp-controller="Admin" asp-action="DeleteUserChats" asp-route-id="@user.Id" class="inline-form" onsubmit="return confirm('Are you sure you want to delete all chats for the user?');">
                    <button type="submit" class="btn btn-warning">Удалить чаты</button>
                </form>
            </td>
        </tr>
        }
        </tbody>
    </table>
</div>
</body>
</html>
